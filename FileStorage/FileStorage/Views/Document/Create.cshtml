@using FileStorage.Extensions
@model FileStorage.Models.DocumentModel

@{
    ViewBag.Title = "Create";
}

<h2></h2>


@using (Html.BeginForm("Create", "Document", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Добавить файл</legend>

        <div class="editor-label">Название</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div></div>
        <div class="editor-label"></div>
        <div class="editor-field">
            <input type="file" name="uploadDocument" />
        </div>

        <p>
            @Html.Submit("Загрузить")
        </p>
    </fieldset>
}


<div>
    @Html.ActionLink("Вернуться в файлы", "Documents")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
